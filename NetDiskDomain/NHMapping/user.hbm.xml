<?xml version="1.0"  encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="NetDiskDomain" namespace="NetDiskDomain" auto-import="true" >
  <class name="NetDiskDomain.UserZero, NetDiskDomain" table="[user]" abstract="true" >
    <id name="_id" column="_id" type="int"  unsaved-value="0" >
      <generator class="native" />
    </id>
    <property name="userId" column="userId" type="string"  />
    <property name="userPwd" column="[userPwd]" type="string"  />
    <property name="enabled" column="[enabled]" type="bool"  />


    <!--lazy="false" inverse="false" cascade="save-update"-->
    <set name="DownloadReconds" lazy="false" inverse="true" cascade="save-update" >
      <key column="userId" ></key>
      <one-to-many class="NetDiskDomain.DownloadRecond"/>
    </set>

    <set name="UploadReconds" lazy="false" inverse="true" cascade="save-update" >
      <key column="userId" ></key>
      <one-to-many class="NetDiskDomain.UploadRecond"/>
    </set>
    
    <!--<property name="rootNodeId" column="rootNodeId" type="int"  />-->
    <many-to-one name="RootNode" class="NetDiskDomain.Node" lazy="false" column="rootNodeId" unique="true"></many-to-one>
    
  </class>
  
</hibernate-mapping>
